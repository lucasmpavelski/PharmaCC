= form_for(@city) do |f|
- if @city.errors.any?
#error_explanation
  %h2
    = pluralize(@city.errors.count, "error")
    prohibited this city from being saved:
  %ul
    - @city.errors.full_messages.each do |msg|
    %li
      = msg
    - end
- end
.field
  = f.label :name
  %br
  = f.text_field :name
.field
  = f.label :state
  %br
  = f.text_field :state
.actions
  = f.submit
- end
