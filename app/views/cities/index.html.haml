%h1
  Listing cities
%table
  %tr
    %th
      Name
    %th
      State
    %th
    %th
    %th
  - @cities.each do |city|
  %tr
    %td
      = city.name
    %td
      = city.state
    %td
      = link_to 'Show', city
    %td
      = link_to 'Edit', edit_city_path(city)
    %td
      = link_to 'Destroy', city, :confirm => 'Are you sure?', :method => :delete
  - end
%br
= link_to 'New City', new_city_path
