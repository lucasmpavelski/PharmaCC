= form_for(@product) do |f|
- if @product.errors.any?
#error_explanation
  %h2
    = pluralize(@product.errors.count, "error")
    prohibited this product from being saved:
  %ul
    - @product.errors.full_messages.each do |msg|
    %li
      = msg
    - end
- end
.field
  = f.label :name
  %br
  = f.text_field :name
.field
  = f.label :code
  %br
  = f.number_field :code
.field
  = f.label :provider
  %br
  = f.text_field :provider
.field
  = f.label :price
  %br
  = f.text_field :price
.field
  = f.label :amount
  %br
  = f.number_field :amount
.field
  = f.label :laboratory
  %br
  = f.text_field :laboratory
.actions
  = f.submit
- end
